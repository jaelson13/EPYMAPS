<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/radioperfil"
            android:src="@drawable/user48" />

        <TextView
            android:id="@+id/tvNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Jaelson Santos"
            android:textColor="#9e9e9e"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="15dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="Conta"
            android:textColor="#9e9e9e"
            android:textSize="9dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#809e9e9e" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="7dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_setamenu"
            android:text="Editar Perfil"
            android:textAlignment="textStart"
            android:textAllCaps="false"

            android:textSize="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:background="#809e9e9e"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="7dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_setamenu"
            android:text="Minhas Fichas"
            android:id="@+id/btnMinhasFichas"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:onClick="mudarFragmento"
            android:textSize="10dp" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:background="#809e9e9e"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="7dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_setamenu"
            android:text="Meus Mapeamentos"
            android:textAlignment="textStart"
            android:textAllCaps="false"

            android:textSize="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#809e9e9e" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:text="Cofigurações"
            android:textColor="#9e9e9e"
            android:textSize="9dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#809e9e9e" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="7dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_setamenu"
            android:text="Desativar Conta"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:background="#809e9e9e" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="7dp"
            android:background="@android:color/transparent"
            android:text="Sair"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="10dp" />


    </LinearLayout>

</RelativeLayout>