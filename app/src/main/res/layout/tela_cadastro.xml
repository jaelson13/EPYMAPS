<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="@drawable/planofundo"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Criar Conta"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"

        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="110dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:alpha="0.4"
            android:background="@drawable/radioedittext"
            android:drawableLeft="@drawable/ic_edtuser"
            android:hint="Nome"
            android:textColorHint="#FFFFFF"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:alpha="0.4"
            android:background="@drawable/radioedittext"
            android:drawableLeft="@drawable/ic_edtemail"
            android:hint="Email"
            android:textColorHint="#FFFFFF"
            android:textSize="8pt"

            />

        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:alpha="0.4"
            android:background="@drawable/radioedittext"
            android:drawableLeft="@drawable/ic_edtpassword"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColorHint="#FFFFFF"

            android:textSize="8pt" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Spinner
                android:id="@+id/spEstados"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:alpha="0.4"
                android:background="@drawable/radioedittext"
                android:textColor="#FFFFFF"
                android:textSize="8pt"
                android:prompt="@string/estados"/>

            <Spinner
                android:id="@+id/spCidades"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:alpha="0.4"
                android:background="@drawable/radioedittext"
                android:prompt="@string/cidades"
                android:textColor="#FFFFFF"
                android:textSize="8pt" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:alpha="0.8"
            android:background="@drawable/radiobotoes"
            android:text="Continuar"
            android:textColor="@android:color/white"

            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        android:layout_gravity="center"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRecupSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:background="@android:color/transparent"
            android:hint="Voltar ao Login"
            android:textColorHint="@android:color/white"
            android:textSize="5pt"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


</RelativeLayout>